{
  "name": "HelloWorld",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "postinstall": "node tools/postinstallFixes.js",
    "ts": "tsc -p .",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "start-reset-cache": "node node_modules/react-native/local-cli/cli.js start -- --reset-cache",
    "android:run": "node node_modules/react-native/local-cli/cli.js run-android --no-packager",
    "android:run+start": "node node_modules/react-native/local-cli/cli.js run-android --no-packager && node node_modules/react-native/local-cli/cli.js start",
    "android:build-release-bundle": "(cd android/ && ./gradlew bundleRelease)",
    "android:build-release-apk": "(cd android/ && ./gradlew assembleRelease)",
    "android:clean": "(cd android/ && ./gradlew clean)",
    "android:bundle": "node node_modules/react-native/local-cli/cli.js bundle --platform android --entry-file index.js --bundle-output android/app/src/main/assets/index.android.bundle --sourcemap-output android/app/src/main/assets/index.android.map --assets-dest android/app/src/main/res/ --dev false --sourcemap-sources-root=build",
    "android:bundle-visualizer": "react-native-bundle-visualizer --platform android",
    "ios:run": "node node_modules/react-native/local-cli/cli.js run-ios --no-packager",
    "ios:bundle-visualizer": "react-native-bundle-visualizer --platform ios",
    "check-dependencies-updates": "npm outdated",
    "check-pods-updates": "cd ios && pod outdated",
    "tests": "jest",
    "tests:watch": "jest --watchAll",
    "eslint:run": "eslint --ext=jsx,ts,tsx",
    "eslint:fix": "eslint --fix --ext=jsx,ts,tsx ."
  },
  "dependencies": {
    "@react-native-community/async-storage": "1.12.1",
    "@reduxjs/toolkit": "1.5.0",
    "faker": "5.1.0",
    "intl": "1.2.5",
    "lodash": "4.17.21",
    "moment": "2.29.1",
    "react": "16.13.1",
    "react-native": "0.63.4",
    "react-native-device-detection": "0.2.1",
    "react-native-fast-image": "8.3.4",
    "react-native-gesture-handler": "1.9.0",
    "react-native-localization": "2.1.6",
    "react-native-navigation": "7.5.0",
    "react-native-orientation-locker": "1.2.0",
    "react-redux": "7.2.2",
    "redux-persist": "6.0.0",
    "redux-persist-filesystem-storage": "3.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.12.9",
    "@babel/runtime": "7.12.5",
    "@react-native-community/eslint-config": "2.0.0",
    "@storybook/addon-actions": "6.1.10",
    "@storybook/addon-knobs": "6.1.10",
    "@storybook/addon-ondevice-actions": "5.3.23",
    "@storybook/addon-ondevice-knobs": "5.3.23",
    "@storybook/react-native": "5.3.23",
    "@types/faker": "5.1.5",
    "@types/intl": "1.2.0",
    "@types/jest": "26.0.16",
    "@types/lodash": "4.14.165",
    "@types/react": "16.9.56",
    "@types/react-native": "0.63.37",
    "@types/react-redux": "7.1.11",
    "@types/react-test-renderer": "16.9.3",
    "babel-jest": "26.6.3",
    "babel-plugin-transform-remove-console": "6.9.4",
    "eslint": "7.15.0",
    "husky": "4.3.4",
    "jest": "26.6.3",
    "lint-staged": "10.5.3",
    "metro-react-native-babel-preset": "0.64.0",
    "react-native-bundle-visualizer": "2.2.1",
    "react-test-renderer": "16.14.0",
    "ts-jest": "26.4.4",
    "typescript": "4.1.2"
  },
  "jest": {
    "preset": "react-native",
    "testPathIgnorePatterns": [
      "node_modules"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js",
      "\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.jest.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-merge": "npm run ts && npm run eslint:run"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "npm run ts",
      "npm run eslint:run"
    ]
  }
}
