{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "strictNullChecks": true
  },
  "include": [
    "__tests__/**/*",
    "e2e/**/*",
    "src/**/*",
    ".storybook/**/*"
  ],
  "exclude": [
    "**/index.js",
    "node_modules",
    "ios",
    "android",
    "tools",
    "patches",
    "coverage",
    "vendor"
  ]
}
